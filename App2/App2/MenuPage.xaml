<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App2.MenuPage">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Main Menu for DataBase test!"
                VerticalOptions="Start" 
                HorizontalOptions="CenterAndExpand" />
        
            <Button HorizontalOptions="Center" VerticalOptions="Start" Text="List Task"
        Clicked="List_Tasks"></Button>
            
            <Button HorizontalOptions="Center" VerticalOptions="Start" Text="Add Task"
        Clicked="Add_Task"></Button>

            <Button HorizontalOptions="Center" VerticalOptions="Start" Text="Do Task"
        Clicked="Do_Tasks"></Button>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>